<h1>Enter the lesson you completed yesterday</h2>

<h3>Students:</h3>

<ul>
  <% @students.each do |student| %>
    <li><a href="/<%= student.name %>"><%= student.name %></a></li>
  <% end %>
</ul>

<%= render('layouts/errors', :object => @student) %>

<h3>Add a student</h3>
<form action="/students" method="post">
  <%= render('form') %>
  <button>Add</button>
</form>

<p><a href="/lessons">Lessons page</a></p>
